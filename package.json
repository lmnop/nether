{
  "name": "nether-web",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "eslint": "eslint components src test tools postcss.config.js webpack.config.js",
    "stylelint": "stylelint \"src/**/*.css\"",
    "lint": "npm run eslint && npm run stylelint",
    "build": "node tools/build.js",
    "start": "node tools/run.js",
    "deploy": "sh tools/deploy.sh"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "bip39": "^2.4.0",
    "fastclick": "^1.0.6",
    "history": "^4.5.1",
    "lmnop-contracts": "git+https://github.com/lmnop/contracts.git",
    "lodash": "^4.17.4",
    "material-ui": "^0.17.0",
    "moment": "^2.17.1",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-modal": "^3.1.0",
    "react-redux": "^5.0.2",
    "react-scroll": "^1.5.4",
    "react-stickynode": "^1.3.1",
    "react-tap-event-plugin": "^2.0.1",
    "react-waypoint": "^7.3.1",
    "redux": "^3.6.0",
    "redux-persist": "^5.0.1",
    "redux-thunk": "^2.2.0",
    "truffle-contract": "^3.0.1",
    "truffle-hdwallet-provider": "^0.0.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "autoprefixer": "^6.6.1",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-register": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "browser-sync": "^2.18.6",
    "connect-history-api-fallback": "^1.3.0",
    "css-loader": "^0.26.1",
    "ejs": "^2.5.5",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.9.0",
    "front-matter": "^2.1.1",
    "highlight.js": "^9.9.0",
    "json-loader": "^0.5.4",
    "markdown-it": "^8.2.2",
    "path-to-regexp": "^1.7.0",
    "pixrem": "^3.0.2",
    "pleeease-filters": "^3.0.0",
    "postcss": "^5.2.10",
    "postcss-calc": "^5.3.1",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-flexbugs-fixes": "^2.1.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.2.2",
    "postcss-media-minmax": "^2.1.2",
    "postcss-nesting": "^2.3.1",
    "postcss-selector-matches": "^2.0.5",
    "postcss-selector-not": "^2.0.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "babel": {
    "presets": [
      "latest",
      "stage-1",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed",
        {
          "requireForBlockBody": false
        }
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-restricted-syntax": "off",
      "jsx-a11y/anchor-has-content": "off",
      "react/jsx-filename-extension": "off",
      "react/require-default-props": "off",
      "react/no-danger": "off",
      "no-continue": "off",
      "import/no-dynamic-require": "off",
      "jsx-a11y/no-static-element-interactions": "off",
      "react/no-array-index-key": "off",
      "react/forbid-prop-types": "off",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single"
    }
  }
}
